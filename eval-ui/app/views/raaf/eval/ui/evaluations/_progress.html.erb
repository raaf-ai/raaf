<%# Evaluation progress partial for Turbo Stream updates %>
<div
  id="evaluation_progress"
  class="bg-white rounded-lg shadow-lg p-6"
  data-controller="evaluation-progress"
  data-evaluation-progress-url-value="<%= raaf_eval_ui.status_evaluation_path(@evaluation) %>"
  data-evaluation-progress-status-value="<%= @evaluation.status %>"
>
  <div class="space-y-4">
    <%# Progress header %>
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold text-gray-900">
        Evaluation in Progress
      </h3>

      <% if @evaluation.status != 'completed' && @evaluation.status != 'failed' %>
        <%= button_to 'Cancel',
          raaf_eval_ui.evaluation_path(@evaluation),
          method: :delete,
          class: 'px-3 py-2 text-sm text-red-600 border border-red-300 rounded hover:bg-red-50',
          data: { confirm: 'Are you sure you want to cancel this evaluation?' } %>
      <% end %>
    </div>

    <%# Progress bar %>
    <div class="space-y-2">
      <div class="flex items-center justify-between text-sm">
        <span class="font-medium text-gray-700">Progress</span>
        <span class="font-semibold text-gray-900"><%= @evaluation.progress_percentage %>%</span>
      </div>

      <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
        <div
          class="h-full rounded-full transition-all duration-300 <%= progress_bar_color(@evaluation.status) %>"
          style="width: <%= @evaluation.progress_percentage %>%"
          role="progressbar"
          aria-valuenow="<%= @evaluation.progress_percentage %>"
          aria-valuemin="0"
          aria-valuemax="100"
        ></div>
      </div>
    </div>

    <%# Status message %>
    <div class="flex items-start space-x-3">
      <%= render_status_icon(@evaluation.status) %>

      <div class="flex-1">
        <p class="text-sm font-medium text-gray-900">
          <%= status_message(@evaluation) %>
        </p>

        <% if @evaluation.current_step.present? %>
          <p class="text-xs text-gray-600 mt-1">
            <%= @evaluation.current_step %>
          </p>
        <% end %>
      </div>
    </div>

    <%# Estimated time remaining %>
    <% if @evaluation.estimated_time_remaining.present? && @evaluation.status == 'running' %>
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>Estimated time remaining: <%= format_time_remaining(@evaluation.estimated_time_remaining) %></span>
      </div>
    <% end %>

    <%# Error display %>
    <% if @evaluation.status == 'failed' && @evaluation.error_message.present? %>
      <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
          <div class="flex-1">
            <h4 class="text-sm font-semibold text-red-900 mb-1">Evaluation Failed</h4>
            <p class="text-sm text-red-700"><%= @evaluation.error_message %></p>

            <% if @evaluation.retry_count < 3 %>
              <%= button_to 'Retry Evaluation',
                raaf_eval_ui.execute_evaluation_path(@evaluation),
                method: :post,
                class: 'mt-3 px-3 py-2 text-sm bg-red-600 text-white rounded hover:bg-red-700' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <%# Completion message %>
    <% if @evaluation.status == 'completed' %>
      <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <p class="text-sm font-semibold text-green-900">Evaluation Completed Successfully!</p>
          </div>

          <%= link_to 'View Results',
            raaf_eval_ui.results_evaluation_path(@evaluation),
            class: 'px-4 py-2 text-sm bg-green-600 text-white rounded hover:bg-green-700' %>
        </div>
      </div>
    <% end %>

    <%# Metrics preview (if available) %>
    <% if @evaluation.status == 'running' && @evaluation.partial_metrics.present? %>
      <div class="pt-4 border-t border-gray-200">
        <h4 class="text-sm font-semibold text-gray-700 mb-2">Interim Metrics</h4>
        <dl class="grid grid-cols-3 gap-4">
          <% @evaluation.partial_metrics.each do |key, value| %>
            <div>
              <dt class="text-xs text-gray-600"><%= key.to_s.humanize %></dt>
              <dd class="text-sm font-semibold text-gray-900"><%= value %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    <% end %>
  </div>
</div>

<%# Auto-refresh script for polling %>
<% if @evaluation.status == 'running' || @evaluation.status == 'pending' %>
  <script>
    // Polling will be handled by Stimulus controller
    // This is here for progressive enhancement
  </script>
<% end %>
